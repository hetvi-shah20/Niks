<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/ivCategory"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_margin="7dp"
                            android:src="@drawable/home_kitchen" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amiko"
                            android:text="Name : "
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/prdName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amiko"
                            android:text="Product Name "
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="25dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amiko"
                            android:text="Price : "
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/prdPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_rupee"
                            android:fontFamily="@font/amiko"
                            android:text="Product Price "
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amiko"
                            android:text="Weight : "
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/prdWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amiko"
                            android:text="Product weight "
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="25dp" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnCart"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/retecngle_button"
                    android:text="Add to cart"
                    android:textColor="#f8fdf9"
                    android:textSize="25dp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>


</LinearLayout>